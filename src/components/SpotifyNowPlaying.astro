---
// SpotifyNowPlaying.astro
---

<div class="spotify-widget">
  <div id="spotify-now-playing" class="flex items-center gap-2 p-2 bg-zinc-50/50 dark:bg-zinc-800/50 rounded-md opacity-75">
    <div class="animate-spin">
      <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
      </svg>
    </div>
    <span class="text-xs text-zinc-500 dark:text-zinc-500">Cargando...</span>
  </div>
</div>

<script>
  interface SpotifyTrack {
    name: string;
    artists: Array<{ name: string }>;
    album: {
      name: string;
      images: Array<{ url: string; width: number; height: number }>;
    };
    external_urls: {
      spotify: string;
    };
    duration_ms: number;
  }

  interface SpotifyResponse {
    item: SpotifyTrack;
    is_playing: boolean;
  }

  const formatDuration = (ms: number): string => {
    const minutes = Math.floor(ms / 60000);
    const seconds = Math.floor((ms % 60000) / 1000);
    return `${minutes}:${seconds.toString().padStart(2, '0')}`;
  };

  const updateSpotifyWidget = async () => {
    const container = document.getElementById('spotify-now-playing');
    if (!container) return;

    try {
      const response = await fetch('/api/spotify/now-playing');
      
      if (!response.ok) {
        if (response.status === 204) {
          // No content - user not playing anything
          container.innerHTML = `
            <div class="flex items-center gap-2 p-2 bg-zinc-50/50 dark:bg-zinc-800/50 rounded-md opacity-75">
              <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              <span class="text-xs text-zinc-500 dark:text-zinc-500">Sin reproducir</span>
            </div>
          `;
        } else {
          throw new Error(`HTTP ${response.status}`);
        }
      } else {
        const data: any = await response.json();
        
        // Handle case when credentials are not configured
        if (data.message && data.message.includes('credentials not configured')) {
          container.innerHTML = `
            <div class="flex items-center gap-2 p-2 bg-yellow-50/50 dark:bg-yellow-900/20 rounded-md opacity-75">
              <svg class="w-3 h-3 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
              </svg>
              <span class="text-xs text-yellow-600 dark:text-yellow-400">No configurado</span>
            </div>
          `;
          return;
        }
        
        const track = data.item;
        const isPlaying = data.is_playing;
        
        const albumImage = track.album.images.find(img => img.width === 64) || track.album.images[0];
        
        container.innerHTML = `
          <div class="flex items-center gap-2 p-2 bg-zinc-50/50 dark:bg-zinc-800/50 rounded-md opacity-75 hover:opacity-100 transition-opacity">
            <div class="relative">
              <img
                src="${albumImage?.url}"
                alt="${track.album.name} album cover"
                class="w-8 h-8 rounded object-cover"
              />
              ${isPlaying ? `
                <div class="absolute -bottom-0.5 -right-0.5 w-3 h-3 bg-green-500 rounded-full border-2 border-white dark:border-zinc-800">
                </div>
              ` : ''}
            </div>

            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1.5 mb-0.5">
                <svg class="w-2.5 h-2.5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
                </svg>
                <span class="text-[10px] text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
                  ${isPlaying ? 'Playing' : 'Played'}
                </span>
              </div>
              
              <h3 class="text-xs font-medium text-zinc-900 dark:text-zinc-100 truncate">
                ${track.name}
              </h3>
              
              <p class="text-[10px] text-zinc-500 dark:text-zinc-500 truncate">
                ${track.artists.map(artist => artist.name).join(', ')}
              </p>
            </div>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error fetching Spotify data:', error);
      container.innerHTML = `
        <div class="flex items-center gap-2 p-2 bg-red-50/50 dark:bg-red-900/20 rounded-md opacity-75">
          <svg class="w-3 h-3 text-red-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
          <span class="text-xs text-red-600 dark:text-red-400">Error</span>
        </div>
      `;
    }
  };

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    updateSpotifyWidget();
    
    // Refresh every 30 seconds
    setInterval(updateSpotifyWidget, 30000);
  });
</script>

<style>
  .spotify-widget {
    @apply w-full;
  }
</style>